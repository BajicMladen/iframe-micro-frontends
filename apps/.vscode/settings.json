{
  "editor.formatOnSave": true, // Enable format on save globally
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode" // Use Svelte-specific formatter for Svelte files
  },
  "prettier.singleQuote": true, // Use single quotes instead of double quotes
  "prettier.trailingComma": "all", // Add trailing commas where valid in ES5
  "prettier.jsxSingleQuote": true, // Use single quotes in JSX
  "prettier.semi": true, // Add semicolons
  "prettier.arrowParens": "always", // Include parentheses in arrow functions
  "prettier.requireConfig": true // Ensure Prettier uses the project's config
}
